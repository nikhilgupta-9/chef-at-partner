RewriteEngine On

# Ensure index.php is the default
DirectoryIndex index.php

# Rewrite rule for product URLs
RewriteRule ^about/?$ about.php [L,QSA]
RewriteRule ^contact/?$ contact.php [L,QSA]
RewriteRule ^blogs/?$ blog.php [L,QSA]
RewriteRule ^privacy-policy/?$ privacy-policy.php [L,QSA]
RewriteRule ^terms-and-conditions/?$ terms-and-conditions.php [L,QSA]

# chef booking page 
RewriteRule ^book-a-chef/([a-zA-Z0-9-]+)/?$ chef-details.php?alias=$1 [L,QSA]

RewriteRule ^category/([a-zA-Z0-9-]+)/?$ category.php?alias=$1 [L,QSA]
RewriteRule ^sub-category/([a-zA-Z0-9-]+)/?$ sub-category.php?alias=$1 [L,QSA]

RewriteRule ^product-details/([a-zA-Z0-9-]+)/?$ product-details.php?alias=$1 [L,QSA]

# RewriteRule ^blogs/([^/]+)/?$ blog-details.php?alias=$1 [L,QSA]
# RewriteRule ^blog-details/([^/]+)/?$ blog-details.php?alias=$1 [L,QSA]
# Enable RewriteBase if needed (Uncomment if required)
# RewriteBase /

# Ensure existing files and directories are accessible
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# php -- BEGIN cPanel-generated handler, do not edit
# Set the “ea-php81” package as the default “PHP” programming language.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php81 .php .php8 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit


# Prevent public access to .env file
<Files ".env">
  Order allow,deny
  Deny from all
</Files>